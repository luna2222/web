	 	case "espresso" :
	 	case "에스프레소" :price=2000;
	 	case "카푸치노" : price=3000;
	 	case "카페라떼" : prince=3500;
	 	   break;
	 	   default :
	 		   document.weite(coofee +"는 없습니다");
